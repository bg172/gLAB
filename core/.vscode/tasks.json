{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "BUILD C++ BUILD",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/gLAB.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: gcc.exe"
        }
    ],
    "version": "2.0.0"
}